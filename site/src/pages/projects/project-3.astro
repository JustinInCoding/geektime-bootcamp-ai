---
import PageLayout from '../../layouts/PageLayout.astro';
import ProjectDetail from '../../components/projects/ProjectDetail';
import { getProjectById } from '../../data/projects';
import { getUrl } from '../../utils/url';

const project = getProjectById('project-3');
if (!project) {
  return Astro.redirect('/projects');
}
---

<PageLayout title={`${project.title} - 陈天 AI 训练营`} description={project.subtitle}>
  <div class="section min-h-screen" style="background-color: var(--md-neutral-100); padding-top: var(--space-2xl); padding-bottom: var(--space-2xl);">
    <div class="container-custom">
      <ProjectDetail project={project} client:load />

      <div class="style="margin-top: var(--space-xl);" text-center">
        <a href={getUrl('projects')} class="hover:underline" style="color: var(--md-sky); font-size: var(--font-body); line-height: var(--line-height-body);">
          ← 返回所有项目
        </a>
      </div>
    </div>
  </div>
</PageLayout>
