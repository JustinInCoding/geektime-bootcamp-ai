---
import PageLayout from '../../layouts/PageLayout.astro';
import ToolDetail from '../../components/tools/ToolDetail';
import { getToolById } from '../../data/tools';
import { getUrl } from '../../utils/url';

const tool = getToolById('claude');
if (!tool) {
  return Astro.redirect('/tools');
}
---

<PageLayout title={`${tool.name} - ${tool.tagline}`} description={tool.description}>
  <div class="section min-h-screen" style="background-color: var(--md-neutral-100); padding-top: var(--space-2xl); padding-bottom: var(--space-2xl);">
    <div class="container-custom">
      <ToolDetail tool={tool} client:load />

      <div class="style="margin-top: var(--space-xl);" text-center">
        <a href={getUrl('tools')} class="hover:underline" style="color: var(--md-sky); font-size: var(--font-body); line-height: var(--line-height-body);">
          ← 返回工具生态
        </a>
      </div>
    </div>
  </div>
</PageLayout>
